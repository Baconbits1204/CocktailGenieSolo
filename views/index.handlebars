<div id="home">
  <div class="container" id="supercontainer">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>This is our Home Page!</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="example-text">Ingrediant</label>
            <input type="text" id="example-text" class="form-control" aria-describedby="example-text"
              placeholder="enter the name of an ingrediant ">
          </div>
          <div class="form-group">
            <label for="example-description">Example Description</label>
            <textarea class="form-control" id="example-description" aria-describedby="example-description"
              placeholder="Enter Example Description"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Give me a suggestion </button>
          <button id="randomize" class="btn btn-warning float-right">give me a random drink</button>
        </form>
        <h3>Recent searches</h3>
        <ul id="example-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="example/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
      <br>
      <div class="col-8 offset-2">
        <a class="work" href="">
          <img src="../public/images/rum.png" alt="rum">
          <h3>Rum</h3>
        </a>
        <a class="work" href="">
          <img src="../public/images/vodka.png" alt="vodka">
          <h3>vodka</h3>
        </a>
        <a class="work" href="">
          <img src="../public/images/whisky.png" alt="whisky">
          <h3>whisky</h3>
        </a>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
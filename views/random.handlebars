<span id="topspan" class="container-fluid"></span>
<div id="maincontainer" class="container-fluid">
  <div class="container">
    <div class="row">

      <div class="col-8 offset-2">
        <div class="card mt-4">
          <div class="card-body" name="drink">
            <h5 id="cocktailId" class="card-title"><strong >{{cocktail}}</strong></h5>
            <p> <strong>Indredients</strong>: </p>
            <ol id="ingredientsId">
              {{#each ingMesObj}}
              <li> {{[0]}} </li>
              <li> {{[1]}} </li>
              {{/each}}
            </ol>
            {{!-- <p> <strong>Meausrements</strong>:</p>
            <ol>
            {{#each measurements}}
            <li> {{measurement}} </li>
            {{/each}}
          </ol> --}}
            <p id="instructionsId"> <strong>Instructions</strong> {{instructions}} </p>
            <div class="mailer">
              <form  >
                <input name="email" type="text" id="email" class="form-control" aria-describedby="example-text"
                  placeholder="Enter your e-mail to save this cocktail">
                <button onclick="mailer(event, '{{cocktail}}', {{{instructions}}}, {{{ingMesObj}}})" type="button" id="cocktail-save" class="btn btn-primary float-right"  >Save Cocktail</button>
              </form>
            </div>
            <a class="animated infinite shake delay-2s" href="/">‚Üê Back To Home</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>